{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "types": ["react", "react-dom", "node"],
    "baseUrl": ".",
    "paths": {
      "core/*": ["core/*"],
      "utils/*": ["utils/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "cli/**/*",
    "core/**/*",
    "utils/**/*",
    "sample-components/**/*",
    "__fixtures__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "storybook-app"
  ]
}
